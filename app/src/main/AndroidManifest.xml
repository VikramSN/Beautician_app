<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.v3cube.beautician">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">


        <activity android:name=".main.services.ServiceOffer"
            android:theme="@style/pinkTopbar">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".main.services.ServiceOffer" />
        </activity>


        <activity
            android:name=".main.SelectedCategoryList"
            android:theme="@style/pinkTopbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.SelectedCategoryList" />
        </activity>

        <activity android:name=".main.ServiceList" />

        <activity
            android:name=".main.MainPage"
            android:label="@string/title_activity_main_page" />

        <activity
            android:name=".ui.FirstPage"
            android:screenOrientation="portrait"
            android:theme="@style/transBlackStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.Login"
            android:screenOrientation="portrait"
            android:theme="@style/pinkTopbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.Login" />
        </activity>

        <activity
            android:name=".ui.Register"
            android:screenOrientation="portrait"
            android:theme="@style/pinkTopbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.Register" />
        </activity>

    </application>

</manifest>